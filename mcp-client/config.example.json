{
  "mcpServers": {
    "github": {
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "-e",
        "GITHUB_PERSONAL_ACCESS_TOKEN=${GITHUB_PERSONAL_ACCESS_TOKEN}",
        "-e",
        "GITHUB_TOOLSETS=all",
        "-e",
        "GITHUB_TOOLS=all",
        "ghcr.io/github/github-mcp-server"
      ]
    },
    "log": {
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "--pull",
        "always",
        "-e",
        "LOKI_URL",
        "-e",
        "SERVICE_NAME",
        "${DOCKER_IMAGE}"
      ],
      "env": {
        "LOKI_URL": "${LOKI_URL}",
        "SERVICE_NAME": "${SERVICE_NAME}"
      }
    }
  }
}
